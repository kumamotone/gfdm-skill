
<% provide(:title, "ログイン") %>
<h1>ログイン</h1>
<% #devise/sessions と sessions になぜか同じファイルを置かないと動かないのであとでリファクタリングするべき おそらくルーティングのせい %>
<div class="row">
    <div class="form-horizontal" role="form">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", :class => "col-sm-3 control-label"  %>
        <div class="col-sm-6">
        <%= f.text_field :email, class: "form-control", autofocus: true   %>
       </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", :class => "col-sm-3 control-label"  %> 
        <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control" %>
        </div>
     </div>

      <div class="form-group">
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する" %>
        </div>
      <% end %>
      </div>

      <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
      <%= f.submit "ログイン", class: "btn btn-large btn-primary" %>
      </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
