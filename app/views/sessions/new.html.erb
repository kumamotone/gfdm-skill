<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
    <div class="form-horizontal" role="form">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", :class => "col-sm-3 control-label"  %>
        <div class="col-sm-6">
        <%= f.text_field :email, placeholder: "ログインの際に必要になります．", class: "form-control"  %>
       </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", :class => "col-sm-3 control-label"  %> 
        <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control" %>
        </div>
     </div>

      <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
      <%= f.submit "ログイン", class: "btn btn-large btn-primary" %>
      </div>
      </div>
    <% end %>

    <p>アカウントがない方は <%= link_to "アカウント作成", signup_path %> できます</p>
  </div>
</div>
