<% provide(:title, 'ユーザ一覧') %>
<h1>ユーザ一覧</h1>

<table id="sTable" class="table table-striped table-bordered table-hover table-condensed display compact">
   <thead>
      <tr>
        <th>ユーザID</th>
        <th>ユーザ名</th>
        <th>DM スキル</th>
        <th>GF スキル</th>
        <th>最終更新</th>
      </tr>
    </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.name, user , :target=>["_blank"] %> </td>
      <td><%= link_to user.d, drum_user_path(user.id) , :target=>["_blank"] %></td>
      <td><%= link_to user.g, guitar_user_path(user.id) , :target=>["_blank"] %></td>
      <td><%= user.updated_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>
